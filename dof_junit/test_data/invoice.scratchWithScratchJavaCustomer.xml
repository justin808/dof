<invoice>
    <id>{{pk}}</id>
    <customer_id>{{pk:scratchCustomerPk}}</customer_id>
    <invoice_date>2007-05-15</invoice_date>
    <total>38</total>
    <pending_balance>38</pending_balance>
    <line_items>
        <line_item>
            <qty>8</qty>
            <product_id>{{pk:scratchProductPk1}}</product_id>
            <price>4</price>
        </line_item>
        <line_item>
            <qty>2</qty>
            <product_id>{{pk:scratchProductPk2}}</product_id>
            <price>3</price>
        </line_item>
    </line_items>
</invoice>